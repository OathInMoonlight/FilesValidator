<Window x:Class="FilesValidator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FilesValidator"
        mc:Ignorable="d"
        Title="文件校验器" Height="400" Width="400" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Border BorderThickness="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button Grid.Row="0" Content="创建新的校验文件" FontFamily="Microsoft YaHei UI Light" FontSize="24" Margin="40 30" Click="CreateNewFile"/>
            <Button Grid.Row="1" Content="对比两个校验文件" FontFamily="Microsoft YaHei UI Light" FontSize="24" Margin="40 30" Click="CompareTwoFiles"/>
        </Grid>
    </Border>
</Window>
